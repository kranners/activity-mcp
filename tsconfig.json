{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "**/eslint.config.ts",
    "**/jest.config.ts",
    "**/vite.config.mts",
    "**/*.tsx",
    "**/.api",
    "**/dist",
    "**/node_modules"
  ]
}
